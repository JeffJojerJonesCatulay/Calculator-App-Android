<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/output"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:height="200dp"
            android:gravity="bottom|right"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="45sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/mod"
                    android:layout_width="83dp"
                    android:layout_height="39dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/square_operators"
                    android:onClick="modBtn"
                    android:text="%"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/cube"
                    android:layout_width="83dp"
                    android:layout_height="39dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/square_operators"
                    android:onClick="squareBtn"
                    android:text="X^2"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="83dp"
                    android:layout_height="39dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/square_operators"
                    android:onClick="cubeBtn"
                    android:text="X^3"
                    android:textColor="#FFFFFF" />

                <ImageButton
                    android:id="@+id/backspace"
                    android:layout_width="83dp"
                    android:layout_height="39dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/square_operators"
                    android:onClick="backspaceBtn"
                    android:src="@drawable/backspace" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <Button
                    android:id="@+id/clear"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/clear"
                    android:onClick="clearBtn"
                    android:text="C"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/left"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle_operators"
                    android:onClick="leftBtn"
                    android:text="("
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/right"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle_operators"
                    android:onClick="rightBtn"
                    android:text=")"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/div"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle_operators"
                    android:onClick="divBtn"
                    android:text="/"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="oneBtn"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="twoBtn"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="threeBtn"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/mul"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle_operators"
                    android:onClick="mulBtn"
                    android:text="*"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="fourBtn"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="fiveBtn"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="sixBtn"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/sub"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle_operators"
                    android:onClick="subBtn"
                    android:text="-"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="sevenBtn"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="eightBtn"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="nineBtn"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle_operators"
                    android:onClick="addBtn"
                    android:text="+"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/negative"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="signBtn"
                    android:text="+/-"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="zeroBtn"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/dot"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/circle"
                    android:onClick="dotBtn"
                    android:text="."
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/equals"
                    android:layout_width="83dp"
                    android:layout_height="83dp"
                    android:background="@drawable/equals"
                    android:onClick="equalsBtn"
                    android:text="="
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"></TableRow>>

        </TableLayout>

    </LinearLayout>
</LinearLayout>